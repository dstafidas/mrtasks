packages:
  yum:
    python3: []
    augeas-libs: []
    awscli-2: []  # Use awscli-2 explicitly to match Amazon Linux 2023 naming

files:
  "/etc/cron.d/certbot_renew":
    mode: "000644"
    owner: root
    group: root
    content: |
      0 0,12 * * * root /usr/bin/certbot renew --quiet --post-hook "systemctl reload nginx && aws s3 cp /etc/letsencrypt/live/mrtasks.com/fullchain.pem s3://mrtasks-certificates/mrtasks.com/fullchain.pem && aws s3 cp /etc/letsencrypt/live/mrtasks.com/privkey.pem s3://mrtasks-certificates/mrtasks.com/privkey.pem"

commands:
  01_setup_certbot:
    command: |
      python3 -m venv /opt/certbot/
      /opt/certbot/bin/pip install --upgrade pip
      /opt/certbot/bin/pip install certbot certbot-nginx
      ln -sf /opt/certbot/bin/certbot /usr/bin/certbot
  02_create_cert_dir:
    command: |
      mkdir -p /etc/letsencrypt/live/mrtasks.com
  03_download_certificates:
    command: |
      aws s3 cp s3://mrtasks-certificates/mrtasks.com/fullchain.pem /etc/letsencrypt/live/mrtasks.com/fullchain.pem
      aws s3 cp s3://mrtasks-certificates/mrtasks.com/privkey.pem /etc/letsencrypt/live/mrtasks.com/privkey.pem
      chmod 644 /etc/letsencrypt/live/mrtasks.com/fullchain.pem
      chmod 600 /etc/letsencrypt/live/mrtasks.com/privkey.pem
      chown root:root /etc/letsencrypt/live/mrtasks.com/fullchain.pem /etc/letsencrypt/live/mrtasks.com/privkey.pem
      echo "Certificates downloaded and permissions set" >> /var/log/eb-certs.log
    test: "[ ! -f /etc/letsencrypt/live/mrtasks.com/fullchain.pem ] || [ ! -f /etc/letsencrypt/live/mrtasks.com/privkey.pem ]"

container_commands:
  01_restart_nginx:
    command: "systemctl restart nginx"